{
  "name": "gamedev-vitegame",
  "productName": "ViteGame - 深度生态模拟游戏",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && start coverage/index.html",
    "test:coverage:gate": "npm run test:coverage && node scripts/ci/coverage-gate.js",
    "test:coverage:dev": "vitest run --coverage --reporter=verbose",
    "test:observability": "node scripts/verify-observability.js",
    "test:legacy": "echo \"Legacy测试套件：运行可观测性测试\" && node -r esbuild-register src/shared/observability/__tests__/observability-test-suite.ts",
    "ci:gate:sentry-up": "node scripts/verify-observability.js",
    "preview": "vite preview",
    "dev:electron": "npm run build && electron .",
    "build:electron": "tsc -p electron && vite build && electron-builder",
    "electron": "electron .",
    "security:scan": "electronegativity --input . --output security-scan.json",
    "security:audit": "npm audit --audit-level high",
    "security:fuses:dev": "node scripts/fuses.js --development",
    "security:fuses:prod": "node scripts/fuses.js --production",
    "security:check": "npm run security:scan && npm run security:audit",
    "security:validate": "node scripts/security-validation.js",
    "cloudevents:check": "node scripts/verify_cloudevents_compliance.mjs",
    "critical:check": "node scripts/critical_conditions_checklist.mjs",
    "test:e2e": "playwright test",
    "test:e2e:security": "playwright test --project=electron-security --reporter=html",
    "test:e2e:arch-check": "node scripts/e2e-architecture-check.mjs",
    "guard:electron": "node scripts/scan_electron_safety.mjs",
    "guard:quality": "node scripts/quality_gates.mjs",
    "guard:base": "node scripts/verify_base_clean.mjs",
    "guard:version": "node scripts/version_sync_check.mjs",
    "guard:health": "node scripts/release-health-gate.mjs",
    "docs:score": "node scripts/docs-scorer.mjs docs/architecture/base/*.md",
    "docs:score:04": "node scripts/docs-scorer.mjs docs/architecture/base/04-*.md",
    "docs:score:all": "node scripts/docs-scorer.mjs docs/architecture/base/*.md",
    "docs:score:check": "node scripts/docs-scorer.mjs",
    "docs:score:gate": "node scripts/docs-scorer.mjs docs/architecture/base/*.md && echo '✅ 所有Base-Clean文档达到18分合格线'",
    "guard:adr": "node scripts/adr-fm-validator.mjs --strict",
    "guard:csp": "node scripts/verify-csp-compliance-simple.mjs",
    "guard:ci": "npm run typecheck && npm run lint && npm run test:unit && npm run guard:electron && npm run test:e2e:arch-check && npm run test:e2e && npm run guard:quality && npm run guard:health && npm run guard:base && npm run guard:version && npm run docs:score:gate && npm run guard:adr && npm run guard:csp",
    "zen:start": "cd zen-mcp-server && source ./Usersweiruan.zen-mcp-servervenv/Scripts/activate && python run.py",
    "zen:check": "cd zen-mcp-server && source ./Usersweiruan.zen-mcp-servervenv/Scripts/activate && python -c \"import sys; print('Python version:', sys.version); print('Zen MCP Server ready!')\"",
    "zen:help": "cd zen-mcp-server && source ./Usersweiruan.zen-mcp-servervenv/Scripts/activate && python run.py --help",
    "config:layers": "node scripts/config-layers.mjs",
    "config:layers:init": "node scripts/config-layers.mjs init",
    "config:layers:validate": "node scripts/config-layers.mjs validate",
    "config:layers:export": "node scripts/config-layers.mjs export",
    "config:layers:report": "node scripts/config-layers.mjs report",
    "config:substitute": "node scripts/config-substitution.mjs",
    "config:substitute:docs": "node scripts/config-substitution.mjs --docs-only",
    "config:substitute:src": "node scripts/config-substitution.mjs --src-only",
    "config:substitute:validate": "node scripts/config-substitution.mjs --validate",
    "prepare": "husky || echo 'Git repository not found'",
    "precommit": "lint-staged",
    "precommit:gate": "node scripts/ci/pre-commit-quality-gate.js",
    "postinstall": "husky install || echo 'Git repository not found'",
    "rebuild:indexes": "node scripts/rebuild_indexes.mjs"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@brave/brave-search-mcp-server": "^1.3.5",
    "@kazuph/mcp-fetch": "^1.5.0",
    "@modelcontextprotocol/server-filesystem": "^2025.7.29",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@sentry/browser": "^10.5.0",
    "@sentry/electron": "^6.10.0",
    "@sentry/integrations": "^7.120.4",
    "@sentry/node": "^10.5.0",
    "@types/js-yaml": "^4.0.9",
    "@upstash/context7-mcp": "^1.0.14",
    "ajv": "^8.17.1",
    "antd": "^5.26.6",
    "cloudevents": "^10.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "phaser": "^3.90.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@doyensec/electronegativity": "^1.9.1",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.30.1",
    "@pimzino/claude-code-spec-workflow": "^1.4.4",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "audit-ci": "^7.1.0",
    "dotenv": "^17.2.1",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.3.9",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "snyk": "^1.1296.0",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,yaml,yml}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run test:unit -- --run --passWithNoTests"
    ]
  }
}

# ===========================================
# 《公会经理》游戏 - 环境变量配置模板
# ===========================================

# 🏗️ 基础环境配置
NODE_ENV=development
LOG_LEVEL=info

# 📊 Sentry 可观测性配置
# 从 https://sentry.io 获取你的项目配置
SENTRY_DSN=https://your-dsn@your-org.ingest.sentry.io/your-project-id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=guild-manager
SENTRY_AUTH_TOKEN=your-auth-token

# 🚨 Release 和部署配置
SENTRY_RELEASE=guild-manager@1.0.0
SENTRY_ENVIRONMENT=development

# 🔧 性能监控配置
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# 📝 日志配置
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=10MB

# 🎮 游戏相关配置
GAME_DEBUG_MODE=true
PHASER_DEBUG=false

# 🔒 安全配置
CSP_REPORT_URI=https://your-org.ingest.sentry.io/api/your-project-id/security/?sentry_key=your-key

# 🌐 部署相关
VERCEL_URL=
GITHUB_SHA=
BUILD_VERSION=

# 🤖 AI/MCP 服务 API Keys
# Task Master AI 需要至少一个 API key
ANTHROPIC_API_KEY=your-anthropic-key-here
PERPLEXITY_API_KEY=your-perplexity-key-here
OPENAI_API_KEY=your-openai-key-here
GOOGLE_API_KEY=your-google-key-here
XAI_API_KEY=your-xai-key-here
OPENROUTER_API_KEY=your-openrouter-key-here
MISTRAL_API_KEY=your-mistral-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
OLLAMA_API_KEY=your-ollama-key-here